@model IEnumerable<FinalSite.DAL.Brand>

@{
    ViewBag.Title = "AllBrands";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center">Marcas</h2>


<table class="table table-responsive table-hover">
    <tr>
        <th>
            Marca
        </th>
        <th>
        RUC
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion_brand)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BusinessPartner.RUC)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IdBrand }) |
                @Html.ActionLink("Details", "Details", new { id = item.IdBrand }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IdBrand })
            </td>
        </tr>
    }

</table>
