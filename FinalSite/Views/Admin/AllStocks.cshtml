@model  IEnumerable<FinalSite.Models.StockIndexViewModel>
 

@{
    ViewBag.Title = "Inventario";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h2 class="text-center">Inventario</h2>

<table class="table">
    <tr>
        <th>
            Id
        </th>
        <th>
            Detalle Producto
        </th>
        <th>
            Precio
        </th>
        <th>
            Usuario
        </th>
        <th>
            Fecha
        </th>
        <th>
            Estado
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @item.IdStock
    </td>
    <td>
        @item.detalle_producto
    </td>
    <td>
        @string.Format("{0:n2}", item.precio)
    </td>
    <td>
        @item.IdUsuario
    </td>
    <td>
        @item.fecha_venta
    </td>
    <td>
        @item.estado
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.IdStock }) |
        @Html.ActionLink("Details", "Details", new { id = item.IdStock }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.IdStock })
    </td>
</tr>
    }

</table>
